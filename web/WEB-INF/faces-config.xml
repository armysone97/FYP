    <navigation-rule>
        <from-view-id>/Login.xhtml</from-view-id>

        <navigation-case>
            <from-action>#{login.verifyUser()}</from-action>
            <from-outcome>loginEvaluator</from-outcome>
            <to-view-id>/MainMenuEvaluator.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{login.verifyUser()}</from-action>
            <from-outcome>loginAdmin</from-outcome>
            <to-view-id>/MainMenuAdmin.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/MaintainSchoolMenu.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{maintainSchoolMenu.nextPageToSchoolDetail()}</from-action>
            <from-outcome>MaintainSchoolDetails</from-outcome>
            <to-view-id>/MaintainSchoolDetails.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/MainMenuAdmin.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{navigationController.processCSLevelSettingPage()}</from-action>
            <from-outcome>CSLevelSetting</from-outcome>
            <to-view-id>/CSLevelSetting.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>

